    }
    
    .card-turquesa:hover { border-color: var(--color-turquesa); }
    .card-morado:hover { border-color: var(--color-morado); }
    .card-verde:hover { border-color: var(--color-verde); }
    .card-rosa:hover { border-color: var(--color-rosa); }
    
    .btn-turquesa {
