      color: white;
    }
    
    .btn-rosa {
      background-color: var(--color-rosa);
      border-color: var(--color-rosa);
      color: white;
    }
    .btn-rosa:hover {
      background-color: #B52A6C;
      border-color: #B52A6C;
      color: white;
    }
    
    .icon-circle {
